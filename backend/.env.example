# ============================================
# DATABASE
# ============================================
# Local dev default (Docker/Local Postgres)
DATABASE_URL="postgresql://username:password@localhost:5432/lurexo_db?schema=public"

# ============================================
# SERVER
# ============================================
PORT=3001
NODE_ENV=development

# Local dev frontend origin (used for CORS, redirects, etc.)
FRONTEND_URL=http://localhost:3000

# In production (Azure), set FRONTEND_URL to your web app URL, e.g.
# FRONTEND_URL=https://lurexo-web-fmb8g0cte0h5ame7.uksouth-01.azurewebsites.net

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# STRIPE
# ============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SERVICE_FEE_PERCENTAGE=4

# ============================================
# SENDGRID (Email)
# ============================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@lurexo.com
SENDGRID_FROM_NAME=Lurexo

# ============================================
# AWS S3 (File Storage)
# ============================================
AWS_REGION=eu-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=lurexo-uploads
AWS_S3_PUBLIC_URL=https://lurexo-uploads.s3.eu-west-2.amazonaws.com

# ============================================
# REDIS (Optional - for Bull Queue)
# ============================================
# Local dev default
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=12
PASSWORD_RESET_EXPIRES_IN=1h
EMAIL_VERIFICATION_EXPIRES_IN=24h

# ============================================
# BUSINESS RULES
# ============================================
MAX_RESALE_PERCENTAGE=110
MAX_TICKETS_PER_ORDER=10
TICKET_TRANSFER_EXPIRY_DAYS=7
